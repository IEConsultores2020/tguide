<li id="<%= "#{dom_id(track)}_item" %>" class="py-3">
    <%= turbo_frame_tag dom_id(track) do %>
        <div class="flex items-center justify-between">
            <%= link_to track.code+' '+track.created_at.in_time_zone("America/Bogota").utc.strftime('%m/%d/%Y %H:%M %p'), edit_track_path(track), class: "flex-1 #{"line-throuht opacity-70" if track.delivered?}" %>

            <div class="flex items-center space-x-3">
                <% if track.delivered? %>
                    <%= button_to "Mark Received", track_path(track, track: { status:  'received'}), method: :patch, class: "bg-teal-500 px-3 py-2 rounded inline-flex items-center justify-center text-white-600" %>
                <% else %>
                    <%= button_to "Mark Delivered", track_path(track, track: { status:  'delivered'}), method: :patch, class: "bg-gray-500 px-3 py-2 rounded inline-flex items-center justify-center text-white-600" %>
                <% end %>
            </div>

            <%= button_to "Delete", track_path(track), method: :delete, class: "bg-red-500 px-3 py-2 rounded inline-flex items-center justify-center text-white-600" %>
        </div>
    <% end %>
</li>