<div class="mx-auto max-w-3xl mt-24">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

    <h1 class="font-bold text-4xl">People of Branch
      <%= branch_name %>
    </h1>

    <%= render "form", person: Person.new %>

    <%= turbo_stream_from "people" %>

  <ul id="people" class="divide-y list-none">
    <%= render @people %>
  </ul>
</div>