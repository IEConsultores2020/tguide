<%= turbo_frame_tag "modal" do %>
  <div class="modal">
    <h1 class="font-bold text-4xl mb-6"> <%= t(:tracks) %> <%= "Modal" %>
    </h1>
    <%= render 'tracks' %>
    <div>
      <%= link_to "Cancel", "#", data: {
          controller: "modals",
          action: "modals#close"
      }, class: "cancel-button" %>
    </div>
  </div>
<% end %>
